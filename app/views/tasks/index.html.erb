<!-- ログインしているかいないかで分岐 -->
<% if logged_in? %>

<h1>タスク一覧</h1>

<% if @tasks.any? %>

  <table class="table table-hover">
    <thread>
      <tr class="active">
        <th>#</th>
        <th>ステータス</th>
        <th>内容</th>
      </tr>
    </thread>
    
    <tbody>
<% @tasks.each_with_index do |task, i| %>      
      <tr>
        <td>
          <%= link_to (i + 1), task %> <!--idではなく上から番号を振る-->
        </td>
        <td>
<%= task.status %>          
        </td>
        <td>
<%= task.content %>          
        </td>
      </tr>
<% end %>

    </tbody>
  </table>
  
  <div>
<%= paginate @tasks %>
  </div>

<% end %>

  <p>
<%= link_to "新規タスクの作成", new_task_path, class: "btn btn-primary" %>
  </p>



<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1>
      <%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>


